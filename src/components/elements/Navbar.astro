---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Navitem from "../shared/Navitem.astro";

const navItems = [
    {
        href:"#",
        text:"Home"
    },
    {
        href:"#services",
        text:"Services"
    },
    {
        href:"#about-us",
        text:"About Us"
    },
    {
        href:"#features",
        text:"Features"
    },
    {
        href:"#contact",
        text:"Contact"
    },
];
---
<header class="absolute inset-x-0 top-0 z-50 py-6">
    <Container>
        <nav class="w-full flex justify-between items-center relative">
            <!-- Logo -->
            <div class="min-w-max inline-flex items-center gap-3">
                <a href="/" class="flex items-center gap-3">
                    <!-- Animated Blockchain Logo -->
                    <div class="relative w-10 h-10 overflow-hidden flex items-center justify-center rounded-full bg-gradient-to-br from-blue-500 to-indigo-500 shadow-lg">
                        <!-- Animated SVG Icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white animate-spin-slow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <!-- Blockchain cube icon -->
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 10V3.236a1 1 0 00-.553-.894l-5-2.5A1 1 0 007.447.842l-5 2.5A1 1 0 002 3.236V10m12 0l-5 2.5M14 10l5-2.5M7 12.5v6.264a1 1 0 00.553.894l5 2.5a1 1 0 00.894 0l5-2.5A1 1 0 0019 18.764V12.5M7 12.5l5 2.5m0 0v6.264m0-6.264l5-2.5" />
                        </svg>
                    </div>
                    <div class="inline-flex text-xl font-bold text-heading-1 tracking-wide">
                        BlockReg Solutions
                    </div>
                </a>
            </div>

            <!-- Navigation Menu -->
            <div class="hidden lg:flex items-center gap-8">
                <ul class="flex gap-6 text-lg text-heading-2">
                    {navItems.map(item => {
                        return <Navitem {...item} />;
                    })}
                </ul>
                <!-- Dropdown Menu for Services -->
                <div class="relative group">
                    <button class="text-lg text-heading-2 flex items-center gap-1 focus:outline-none">
                        <span>Solutions</span>
                        <!-- Chevron Icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 transition-transform duration-300 group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <!-- Dropdown Content -->
                    <div class="absolute left-0 mt-2 w-48 bg-white dark:bg-gray-800 shadow-lg rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 invisible group-hover:visible z-50">
                        <ul class="py-2">
                            <li>
                                <a href="#enterprise" class="block px-4 py-2 text-heading-2 hover:bg-gray-100 dark:hover:bg-gray-700">Enterprise Solutions</a>
                            </li>
                            <li>
                                <a href="#developers" class="block px-4 py-2 text-heading-2 hover:bg-gray-100 dark:hover:bg-gray-700">Developer Tools</a>
                            </li>
                            <li>
                                <a href="#compliance" class="block px-4 py-2 text-heading-2 hover:bg-gray-100 dark:hover:bg-gray-700">Compliance Services</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Call-to-Action Button -->
            <div class="hidden lg:flex items-center">
                <BtnLink text="Get Started" href="#cta" className="flex justify-center w-full sm:w-max" variant="primary"/>
            </div>

            <!-- Mobile Menu Toggle and Theme Switcher -->
            <div class="flex items-center gap-x-3 ">
                <!-- Theme Switcher -->
                <button data-switch-theme class="outline-none flex relative text-heading-2 rounded-full p-2 border border-box-border">
                    <!-- Dark Mode Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 dark:flex hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <!-- Moon Icon -->
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25c0 5.385 4.365 9.75 9.75 9.75a9.753 9.753 0 009.002-5.998z" />
                    </svg>
                    <!-- Light Mode Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <!-- Sun Icon -->
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v2m0 14v2m7-7h2M3 12H1m16.364-7.364l1.414 1.414M5.636 5.636l1.414-1.414M17.657 17.657l1.414-1.414M6.343 17.657L4.929 19.071" />
                    </svg>
                    <span class="sr-only">Switch theme</span>
                </button>

                <!-- Mobile Menu Button -->
                <button data-toggle-nav data-open-nav="false" class="outline-none w-8 h-8 flex flex-col justify-between items-center">
                    <span class="block w-6 h-0.5 bg-heading-2 transform transition duration-300" data-hamburger-line></span>
                    <span class="block w-6 h-0.5 bg-heading-2 transform transition duration-300" data-hamburger-line></span>
                    <span class="block w-6 h-0.5 bg-heading-2 transform transition duration-300" data-hamburger-line></span>
                    <span class="sr-only">Toggle navigation</span>
                </button>
            </div>

            <!-- Mobile Navigation Overlay -->
            <div data-nav-overlay aria-hidden="true" class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-md hidden"></div>

            <!-- Mobile Navigation Menu -->
            <div data-navbar class="fixed inset-y-0 right-0 w-64 bg-white dark:bg-gray-900 transform translate-x-full transition-transform duration-300 ease-in-out z-50">
                <div class="flex flex-col h-full">
                    <!-- Close Button -->
                    <div class="flex justify-end p-4">
                        <button data-close-nav class="text-heading-2 outline-none">
                            <!-- Close Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <!-- X Icon -->
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                            <span class="sr-only">Close navigation</span>
                        </button>
                    </div>
                    <!-- Mobile Menu Items -->
                    <ul class="flex flex-col gap-6 px-6 text-lg text-heading-2">
                        {navItems.map(item => {
                            return <Navitem {...item} />;
                        })}
                        <!-- Mobile CTA Button -->
                        <li>
                            <BtnLink text="Get Started" href="#cta" className="w-full" variant="primary"/>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </Container>
</header>
