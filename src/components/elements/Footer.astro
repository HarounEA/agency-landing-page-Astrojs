---
import GroupFooterNav from "../blocks/GroupFooterNav.astro";
import Container from "../shared/Container.astro";
import FooterNav from "../shared/FooterNav.astro";
import Paragraph from "../shared/Paragraph.astro";

// Updated navigation items relevant to BlockReg Solutions
const footerNav1 = [
  {
    itemText: "Services",
    itemLink: "/services",
  },
  {
    itemText: "Solutions",
    itemLink: "/solutions",
  },
  {
    itemText: "Pricing",
    itemLink: "/pricing",
  },
  {
    itemText: "Case Studies",
    itemLink: "/case-studies",
  },
];

const footerSupport = [
  {
    itemText: "Help Center",
    itemLink: "/help-center",
  },
  {
    itemText: "Documentation",
    itemLink: "/documentation",
  },
  {
    itemText: "API Reference",
    itemLink: "/api-reference",
  },
  {
    itemText: "Contact Us",
    itemLink: "/contact",
  },
];

const footerCompany = [
  {
    itemText: "About Us",
    itemLink: "/about",
  },
  {
    itemText: "Blog",
    itemLink: "/blog",
  },
  {
    itemText: "Careers",
    itemLink: "/careers",
  },
  {
    itemText: "Partners",
    itemLink: "/partners",
  },
];

const footerLegal = [
  {
    itemText: "Privacy Policy",
    itemLink: "/privacy-policy",
  },
  {
    itemText: "Terms of Service",
    itemLink: "/terms-of-service",
  },
  {
    itemText: "Cookie Policy",
    itemLink: "/cookie-policy",
  },
];
---
<div class="mt-16"></div>
<footer class="relative bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 pt-28 rounded-t-3xl">
  <!-- Background Shapes -->
  <div class="absolute right-0 top-0 h-full w-full flex justify-end">
    <div class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl">
      <span class="absolute w-16 h-16 -top-1 -right-1 bg-blue-500 rounded-md rotate-45"></span>
      <span class="absolute w-16 h-16 -bottom-1 -right-1 bg-green-500 rounded-md rotate-45"></span>
      <span class="absolute w-16 h-16 -bottom-1 -left-1 bg-purple-500 rounded-md rotate-45"></span>
    </div>
  </div>

  <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
    <div class="w-28 h-28 overflow-hidden flex rounded-xl relative blur-2xl">
      <span class="absolute w-16 h-16 -top-1 -right-1 bg-blue-500 rounded-md rotate-45"></span>
      <span class="absolute w-16 h-16 -bottom-1 -right-1 bg-green-500 rounded-md rotate-45"></span>
      <span class="absolute w-16 h-16 -bottom-1 -left-1 bg-purple-500 rounded-md rotate-45"></span>
    </div>
  </div>

  <Container className="pb-8 relative overflow-hidden">
    <!-- Central Background Shape -->
    <span class="absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 blur-2xl opacity-20 w-24 h-16 sm:w-48 sm:h-36 rounded-full rotate-12 skew-x-6 bg-purple-500"></span>
    <div class="grid grid-cols-2 lg:grid-cols-3 lg:items-stretch gap-8 relative">
      <!-- Company Info -->
      <div class="col-span-2 lg:col-span-1 h-auto flex flex-col">
        <div class="h-full">
          <a href="/" class="relative flex items-center gap-3">
            <img src="/logos/BlockReg.png" alt="BlockReg Solutions Logo" class="w-10 h-10 rounded-3xl" />
            <div class="inline-flex text-lg font-semibold text-heading-1">
              BlocReg Solutions
            </div>
          </a>
          <Paragraph className="mt-8">
            Leading the way in blockchain innovation, we provide secure and compliant solutions tailored to your business needs.
          </Paragraph>
        </div>

        <!-- Social Links -->
        <div class="flex items-center gap-4 text-heading-3 mt-8">
          <a href="https://www.linkedin.com/company/blocreg-solutions/" target="_blank" rel="noopener noreferrer" class="transition hover:text-heading-1 hover:scale-105">
            <!-- LinkedIn Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 16 16">
              <!-- SVG path data -->
              <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
            </svg>
            <span class="sr-only">LinkedIn</span>
          </a>
          
        </div>
      </div>

      <!-- Navigation Links -->
      <GroupFooterNav>
        <FooterNav title="Company" navItems={footerCompany} />
        <FooterNav title="Solutions" navItems={footerNav1} />
      </GroupFooterNav>

      <GroupFooterNav>
        <FooterNav title="Support" navItems={footerSupport} />
        <FooterNav title="Legal" navItems={footerLegal} />
      </GroupFooterNav>
    </div>
  </Container>

  <div class="bg-gradient-to-tl from-box-bg py-4 relative">
    <Container>
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 md:gap-6 text-sm md:text-base text-heading-3">
        <div>
          &copy; <span id="year"></span> BlockReg Solutions. All rights reserved.
        </div>
        <div>
          Proudly developed by <a href="https://yourdeveloperwebsite.com" target="_blank" class="font-semibold">El AOUAD Haroun.</a>
        </div>
      </div>
    </Container>
  </div>
</footer>

<!-- Update the year dynamically -->
<script>
  document.getElementById('year').textContent = new Date().getFullYear();
</script>
